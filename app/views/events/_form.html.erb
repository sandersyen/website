<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">
    <div class="row flex-xl-nowrap">
      <div class="col-12 col-md-2 col-xl-2 bd-sidebar">
      </div>
      <main class="col-12 col-md-8 col-xl-8 bd-content">
        <div class="form-group">
          <%= form.label :name, "Name:", class: "col-md-4 control-label" %>
          <div>
            <%= form.text_field :name, id: :event_name, class: "form-control", placeholder:"Event Name"%>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :description, "Description:", class: "col-md-4 control-label" %>
          <div>
            <%= form.text_area :description, id: :event_description, class: "form-control", placeholder:"Event Description", rows:"5"%>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :start_time, "Start Time:", class: "col-md-4 control-label" %>
          <div>
            <%= form.datetime_select :start_time, {}, id: :event_start_time%>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :end_time, "End Time:", class: "col-md-4 control-label" %>            
          <div>
            <%= form.datetime_select :end_time, {}, id: :event_end_time %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :location, "Location:", class: "col-md-4 control-label" %>
          <div>
            <%= form.text_area :location, id: :event_location, class: "form-control", placeholder:"Event Location", rows:"5"%>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :is_viewable, "Is Publicly Visible:", class: "col-sm-4 control-label" %>
          <div>
            <%= form.check_box :is_viewable, id: :event_is_viewable, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :group_id, "Group:", class: "col-md-4 control-label" %>
          <div>
            <%= form.select :group_id, group_default(event, @group||event.group), {}, id: :event_group_id, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
            <%= form.submit %>
        </div>
      </main>
      <div class="col-12 col-md-2 col-xl-2 bd-sidebar">
      </div>
    </div>
  </div>

<% end %>
