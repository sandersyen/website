<!-- Mini-script for Calendar -->
<% content_for :initiate_calendar do %>
  <script type="text/javascript">
    $('#calendar').fullCalendar({
      events: {
        url: '<%= events_path(format: :json) %>'
      }
    });
  </script>
<% end %>

<!-- Add some space at the bottom of the Calendar -->
<style type="text/css">
	#calendar {
		padding-bottom: 10%
	}

</style>

<div class="container">
  <br/>
  <% if logged_in? %>
    <div id = "calendar">
      <%= yield :initiate_calendar %>
    </div>
  <% else %>
    <div class="jumbotron">
      <h1 class="display-4">Welcome to Chrono!</h1>
      <p class="lead">Please sign in with a Google account to enjoy all the features of Chrono!</p>
      <hr class="my-4">
      <!-- %><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a> -->
      <div class= "flexVerticalItem">
        <%= google_sign_in_button 'Sign In With Google', proceed_to: create_login_path, class:"btn btn-md btn-primary mr-sm-2 nav-button" %>
      </div>
    </div>
  <% end %>
</div>